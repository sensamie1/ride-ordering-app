<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sender Rides</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    h3 {
      text-align: center;
      margin-bottom: 5px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid lightgray;
      min-height: 60vh;
      padding: 10px;
      overflow-y: auto;
      width: 90%;
      max-width: 400px;
      margin: 0 auto 20px;
      background-color: #f9f9f9;
      border-radius: 10px;
      display: block;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 20px;
      padding: 10px;
      background-color: #b9ddae;
      border-radius: 5px;
    }
    li {
      display: block;
      margin-bottom: 5px;
    }

    .btn {
      display: inline-block;
      padding: 8px 16px;
      margin: 0 4px;
      border: 1px solid #ccc;
      border-radius: 4px;
      text-decoration: none;
      color: #f9f9f9;
      background-color: #297424ef;;
      cursor: pointer;
    }

    a:hover {
      background-color: #599e54;
    }


    .btn.disabled {
      cursor: not-allowed;
      opacity: 0.5;
      background-color: #b9ddae;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px; 
    }

    .pagination p {
      margin: 0 10px;
    }


    @media screen and (max-width: 600px) {
      li {
        padding: 15px;
      }

      .pagination {
        text-align: center;
      }

      .btn {
        margin: 4px;
      }
    }
  </style>
</head>
<body>
  <header>
    <%- include('./partials/senders-header'); %>
  </header>
  <div class="container">
    <h3>My Rides</h3>
    <% if (messages.error) { %>
      <div class="alert alert-danger text-center">
        <ul>
          <% messages.error.forEach(function(error) { %>
            <li><%= error %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <% if(messages.success) {%>
      <div class="alert alert-success text-center">
        <li><%=messages.success%></li>
    </div>
    <%} else {%>
      <ul>
        <% rides.forEach(ride => { %>
          <li>
            <strong>Your ride with Driver <%= ride.driver.first_name + ' ' + ride.driver.last_name %></strong><br>
            <strong>Date:</strong> <span class="dateElement"><%= ride.created_at %></span><br>
            <strong>From:</strong> <%= ride.current_location %><br>
            <strong>To:</strong> <%= ride.destination %><br>
            <strong>Price:</strong> â‚¦<%= ride.price %><br>
            <strong>Status:</strong> <%= ride.status %><br>

          </li>
        <% }) %>
      </ul>
    <%}%>
  </div>
  <!-- Pagination buttons -->
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="/views/senders/my-rides?page=<%= Number(currentPage) - 1 %>" class="btn">Previous</a>
    <% } else { %>
      <a class="btn" style="cursor: not-allowed;">Previous</a>
    <% } %>

    <p>Page <%= currentPage %> of <%= pages %></p>

    <% if (currentPage < pages) { %>
      <a href="/views/senders/my-rides?page=<%= Number(currentPage) + 1 %>" class="btn">Next</a>
    <% } else { %>
      <a class="btn" style="cursor: not-allowed;">Next</a>
    <% } %>
  </div>



  <footer>
    <%- include('./partials/senders-footer'); %>
  </footer>

  <script>
    function formatDate(date) {
      const day = String(date.getDate()).padStart(2, '0');
      const month = String(date.getMonth() + 1).padStart(2, '0');
      const year = date.getFullYear();
      const hours = String(date.getHours()).padStart(2, '0');
      const minutes = String(date.getMinutes()).padStart(2, '0');

      return `${year}-${month}-${day} ${hours}:${minutes}`;
    }

    window.onload = function() {
      const elements = document.getElementsByClassName('dateElement');
      for (let i = 0; i < elements.length; i++) {
        const currentDate = new Date(elements[i].textContent);
        const formattedDate = formatDate(currentDate);
        elements[i].textContent = formattedDate;
      }
    };
  </script>
</body>
</html>
